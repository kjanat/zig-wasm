{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "zig-wasm-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "WebAssembly wrappers for Zig standard library modules",
  "homepage": "https://github.com/kjanat/zig-wasm#readme",
  "bugs": "https://github.com/kjanat/zig-wasm/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/zig-wasm.git"
  },
  "license": "MIT",
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "type": "module",
  "scripts": {
    "build": "pnpm clean && pnpm build:zig && pnpm build:ts:parallel",
    "build:ts": "tsdown --workspace",
    "build:ts:parallel": "pnpm --parallel --aggregate-output --filter @zig-wasm/* build",
    "build:ts:watch": "tsdown --workspace --watch",
    "build:zig": "zig build",
    "build:zig:small": "pnpm build:zig -Doptimize=ReleaseSmall",
    "clean": "pnpm --parallel --aggregate-output clean && rm -rf zig-out .zig-cache",
    "clean:bash": "find . -maxdepth 3 -type d \\( -name coverage -o -name dist -o -name test-results -o -name zig-out -o -name .zig-cache -o -name html -o -name .ruff_cache \\) -prune -exec rm -rf {} +",
    "fmt": "dprint fmt && pnpm -r --parallel --aggregate-output fmt",
    "fmt:check": "dprint check",
    "fmt:staged": "dprint fmt --staged",
    "postinstall": "lefthook install",
    "lint": "pnpm --parallel --aggregate-output --filter @zig-wasm/* lint",
    "lint:fix": "pnpm --parallel --aggregate-output --filter @zig-wasm/* lint:fix",
    "prepare": "pnpm build:zig",
    "prepublishOnly": "pnpm clean && pnpm build:zig -Doptimize=ReleaseFast && pnpm build:ts",
    "publish": "pnpm -r publish --access public",
    "publish:dry": "pnpm --parallel --aggregate-output -r publish --dry-run",
    "publish:jsr": "pnpm -r publish:jsr",
    "publish:jsr:dry": "pnpm --parallel --aggregate-output -r publish:jsr --dry-run",
    "pretest": "zig build gen-test-vectors",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui --coverage",
    "typecheck": "pnpm --parallel --aggregate-output -r typecheck"
  },
  "config": {
    "ci": {
      "paths": {
        "wasm": "packages/*/wasm",
        "dist": "packages/*/dist\ninternal/*/dist"
      },
      "nodeVersions": [
        20,
        22,
        24
      ],
      "nodeDefault": 22,
      "zigVersion": "0.15.2"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@codecov/rollup-plugin": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "@zig-wasm/tooling": "workspace:*",
    "dprint": "catalog:",
    "glob": "catalog:",
    "lefthook": "catalog:",
    "markdownlint-cli2": "catalog:",
    "publint": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "unplugin-unused": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  }
}
