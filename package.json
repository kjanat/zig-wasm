{
  "name": "zig-wasm-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "WebAssembly wrappers for Zig standard library modules",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/zig-wasm.git"
  },
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm build:zig && pnpm build:ts",
    "build:ts": "tsdown --workspace",
    "build:zig": "zig build -Doptimize=ReleaseSmall",
    "clean": "pnpm -r clean && rm -rf zig-out .zig-cache",
    "fmt": "dprint fmt",
    "lint": "biome lint",
    "lint:fix": "biome check --write && pnpm fmt",
    "test": "pnpm -r test",
    "test:quick": "node test.mjs",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^25.0.1",
    "@typescript/native-preview": "7.0.0-dev.20251212.1",
    "dprint": "^0.50.2",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "@types/bun": "^1.3.4"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
