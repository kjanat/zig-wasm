{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "zig-wasm-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "WebAssembly wrappers for Zig standard library modules",
  "homepage": "https://github.com/kjanat/zig-wasm#readme",
  "bugs": "https://github.com/kjanat/zig-wasm/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/zig-wasm.git"
  },
  "license": "MIT",
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "type": "module",
  "workspaces": {
    "packages": [
      "internal/*",
      "packages/*"
    ],
    "catalog": {
      "@biomejs/biome": "2.3.8",
      "@types/bun": "^1.3.4",
      "@types/node": "^25",
      "@typescript/native-preview": "latest",
      "@vitest/coverage-v8": "~4.0.15",
      "dprint": "latest",
      "publint": "^0.3.16",
      "tsdown": "~0.17.3",
      "typescript": "5.9.3",
      "unplugin-unused": "^0.5.6",
      "vitest": "~4.0.15"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:zig && pnpm build:ts",
    "build:ts": "tsdown --workspace",
    "build:zig": "zig build",
    "build:zig:small": "pnpm build:zig -Doptimize=ReleaseSmall",
    "clean": "pnpm -r clean && rm -rf zig-out .zig-cache",
    "fmt": "dprint fmt && pnpm -r fmt",
    "fmt:check": "dprint check",
    "fmt:staged": "dprint fmt --staged",
    "postinstall": "lefthook install",
    "lint": "pnpm --filter @zig-wasm/* lint",
    "lint:fix": "pnpm --filter @zig-wasm/* lint:fix",
    "prepare": "pnpm build:zig",
    "prepublishOnly": "pnpm clean && pnpm build:zig -Doptimize=ReleaseFast && pnpm build:ts",
    "publish": "pnpm publish --access public --filter @zig-wasm/*",
    "publish:dry": "pnpm run publish --dry-run",
    "publish:jsr": "pnpm dlx jsr publish",
    "publish:jsr:dry": "pnpm --filter @zig-wasm/* exec jsr publish --dry-run",
    "test": "pnpm -r test",
    "typecheck": "pnpm --filter @zig-wasm/* typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "dprint": "catalog:",
    "lefthook": "^2.0.11",
    "publint": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "unplugin-unused": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  }
}
