{
  "name": "zig-wasm-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "WebAssembly wrappers for Zig standard library modules",
  "scripts": {
    "build:zig": "zig build -Doptimize=ReleaseSmall",
    "copy:wasm": "bun ./scripts/copy-wasm.ts",
    "build:ts": "pnpm -r build",
    "build": "pnpm build:zig && pnpm build:ts && pnpm copy:wasm",
    "test": "pnpm -r test",
    "test:quick": "node test.mjs",
    "clean": "rm -rf zig-out .zig-cache && pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "optionalDependencies": {
    "@types/bun": "^1.3.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.23.0",
  "workspaces": [
    "packages/*"
  ]
}
