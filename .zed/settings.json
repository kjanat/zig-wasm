{
  "auto_install_extensions": {
    "biome": true,
    "dprint": true,
    "ruff": true,
    "tsgo": true,
    "ty": true
  },
  "formatter": { "language_server": { "name": "dprint" } },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "ty", "!pylsp", "..."],
      "code_actions_on_format": {
        // Organize imports
        "source.organizeImports.ruff": true,
        // Fix all auto-fixable lint violations
        "source.fixAll.ruff": true
      }
    },
    "TypeScript": {
      "language_servers": ["biome", "vtsls", "!deno", "!oxc"], // "tsgo",
      "code_actions_on_format": {
        "source.fixAll.biome": false,
        "source.organizeImports.biome": false
      }
    },
    "TSX": {
      "language_servers": ["biome", "vtsls", "!deno", "!oxc"], // "tsgo",
      "code_actions_on_format": {
        "source.fixAll.biome": false,
        "source.organizeImports.biome": false
      }
    },
    "JavaScript": {
      "language_servers": ["biome", "vtsls", "!deno", "!oxc"], // "tsgo",
      "code_actions_on_format": {
        "source.fixAll.biome": false,
        "source.organizeImports.biome": false
      }
    }
  },
  "lsp": {
    "biome": {
      "binary": {
        "path": "./node_modules/.bin/biome",
        "arguments": ["lsp-proxy"]
      },
      "settings": {
        "require_config_file": false
      },
      "initialization_options": {
        "assist": {
          "organizeImports": {
            "enable": false
          }
        }
      }
    },
    "dprint": {
      "binary": {
        "path": "./node_modules/.bin/dprint",
        "arguments": ["lsp"]
      }
    }
  }
}
