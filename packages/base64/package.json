{
  "name": "@zig-wasm/base64",
  "version": "0.1.0",
  "description": "Base64 and hex encoding/decoding powered by Zig via WebAssembly",
  "keywords": [
    "zig",
    "wasm",
    "webassembly",
    "base64",
    "hex",
    "encoding",
    "decoding"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/zig-wasm.git",
    "directory": "packages/base64"
  },
  "license": "MIT",
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json",
    "./base64.wasm": "./wasm/base64.wasm"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist",
    "fmt": "dprint fmt",
    "lint": "biome lint",
    "lint:fix": "biome check --write && pnpm fmt",
    "publish:jsr": "pnpm dlx jsr publish --allow-dirty",
    "test": "vitest run",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@zig-wasm/core": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@zig-wasm/tooling": "workspace:*",
    "dprint": "catalog:"
  }
}
