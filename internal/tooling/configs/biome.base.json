{
  "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": false,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "domains": {
      "project": "recommended",
      "test": "recommended"
    }
  },
  "javascript": { "formatter": { "quoteStyle": "double" } },
  "overrides": [
    {
      "includes": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/test/**",
        "**/tests/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "includes": ["**/index.ts"],
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    }
  ]
}
