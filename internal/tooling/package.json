{
  "name": "@zig-wasm/tooling",
  "version": "0.1.0",
  "description": "Shared biome config, tsconfig, and CLI tools for Zig-Wasm packages",
  "keywords": [
    "config",
    "biome",
    "tsconfig",
    "typescript",
    "tooling"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/zig-wasm.git",
    "directory": "internal/tooling"
  },
  "license": "MIT",
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./biome": "./configs/biome.base.json",
    "./tsconfig": "./configs/tsconfig.base.json"
  },
  "bin": {
    "check-published": "./bin/check-published.sh",
    "sync-versions": "./bin/sync-versions.sh"
  },
  "files": [
    "bin",
    "configs",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "check-published": "./bin/check-published.sh",
    "clean": "rm -rf dist",
    "fmt": "dprint fmt --allow-no-files",
    "lint": "biome lint",
    "lint:fix": "biome check --write && pnpm fmt",
    "publish:jsr": "pnpm dlx jsr publish --allow-dirty",
    "sync-versions": "./bin/sync-versions.sh",
    "test": "vitest run",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "dprint": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  }
}
